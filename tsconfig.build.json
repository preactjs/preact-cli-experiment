{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "dist",
		"downlevelIteration": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"baseUrl": "./packages"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/node_modules"]
}
