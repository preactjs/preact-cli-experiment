{
	"name": "preact-cli",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "lerna run build --stream",
		"test": "ava-ts | tap-notify | faucet",
		"test:watch": "ava-ts --watch",
		"test:ci": "ava-ts | faucet",
		"test:integration": "ava-ts --files tests/* | tap-notify | faucet",
		"test:integration:ci": "ava-ts --files tests/* | faucet",
		"test:integration:watch": "ava-ts --files tests/* --watch",
		"lint": "eslint packages",
		"lint:fix": "eslint --fix packages"
	},
	"devDependencies": {
		"@types/debug": "^4.1.5",
		"@types/node": "^14.0.5",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"directory-tree": "^2.2.4",
		"eslint": "^7.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-ava": "^10.3.0",
		"eslint-plugin-prettier": "^3.1.3",
		"faucet": "^0.0.1",
		"husky": "^4.2.5",
		"lerna": "^3.22.0",
		"lint-staged": "^11.1.1",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"tap-notify": "^1.0.0",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.3"
	},
	"dependencies": {
		"chalk": "^4.0.0"
	},
	"ava": {
		"files": [
			"packages/**/tests/*"
		],
		"sources": [
			"packages/**/src/*"
		],
		"tap": true,
		"cache": true,
		"concurrency": 5,
		"verbose": true,
		"extensions": [
			"ts"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js, ts, jsx, tsx, d.ts}": [
			"eslint --fix",
			"git add"
		],
		"*.{json, css, scss, md, yml}": [
			"prettier --write",
			"git add"
		]
	}
}
