{
	"name": "preact-cli",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "lerna run build --stream",
		"test": "ava-ts | tap-notify | tap-diff",
		"test:watch": "ava-ts --watch",
		"test:ci": "ava-ts | faucet"
	},
	"devDependencies": {
		"@types/debug": "^4.1.5",
		"@types/node": "^12.7.4",
		"@typescript-eslint/parser": "^2.1.0",
		"eslint": "^6.3.0",
		"eslint-config-prettier": "^6.2.0",
		"eslint-plugin-ava": "^8.0.0",
		"eslint-plugin-prettier": "^3.1.0",
		"faucet": "^0.0.1",
		"lerna": "^3.16.4",
		"prettier": "^1.18.2",
		"tap-diff": "^0.1.1",
		"tap-notify": "^1.0.0",
		"ts-node": "^8.3.0",
		"typescript": "^3.6.2"
	},
	"dependencies": {
		"chalk": "^2.4.2"
	},
	"ava": {
		"files": [
			"packages/**/tests/*"
		],
		"sources": [
			"packages/**/src/*"
		],
		"tap": true,
		"cache": true,
		"concurrency": 5,
		"verbose": true,
		"extensions": [
			"ts"
		]
	}
}
